namespace mushroom_api;

table key {
    space: string;
    name: string;
}

table get {
    key: key;
}

table put {
    key: key;
    value: [ubyte];
}

table delete {
    key: key;
}

union action_contents {
    get,
    put,
    delete,
}

table message {
    action: action_contents (required);
}

root_type message;
file_identifier "MSHA";
